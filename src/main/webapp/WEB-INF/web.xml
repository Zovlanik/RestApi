<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Servlets Tutorial</display-name>


    <filter>
        <filter-name>FilterDemo</filter-name>
        <filter-class>com.zovlanik.restapi.model.FilterDemo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDemo</filter-name>
        <url-pattern>/FilterDemo</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterDemo</filter-name>
        <url-pattern>/ErrorDemo</url-pattern>
    </filter-mapping>

    
    <!--Servlets-->
    <servlet>
        <servlet-name>CookieDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.CookieDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SessionTrackingDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.SessionTrackingDemo</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.SimpleServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletRequestDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.ServletRequestDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ServletResponseDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.ServletResponseDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PassingParametersUsingGetMethodDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.PassingParametersUsingGetMethodDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PassingParametersUsingPostMethodDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.PassingParametersUsingPostMethodDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ErrorDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.ErrorDemo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatabaseDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.DatabaseDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DateTimeDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.DateTimeDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AutoRefreshDemo</servlet-name>
        <servlet-class>com.zovlanik.restapi.model.AutoRefreshDemo</servlet-class>
    </servlet>


    <!--Servlet-mappings-->
    <servlet-mapping>
        <servlet-name>CookieDemo</servlet-name>
        <url-pattern>/CookieDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SessionTrackingDemo</servlet-name>
        <url-pattern>/SessionTrackingDemo</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/SimpleServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletRequestDemo</servlet-name>
        <url-pattern>/ServletRequestDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletResponseDemo</servlet-name>
        <url-pattern>/ServletResponseDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PassingParametersUsingGetMethodDemo</servlet-name>
        <url-pattern>/PassingParametersUsingGetMethodDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PassingParametersUsingPostMethodDemo</servlet-name>
        <url-pattern>/PassingParametersUsingPostMethodDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorDemo</servlet-name>
        <url-pattern>/ErrorDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DatabaseDemo</servlet-name>
        <url-pattern>/DatabaseDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DateTimeDemo</servlet-name>
        <url-pattern>/DateTimeDemo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AutoRefreshDemo</servlet-name>
        <url-pattern>/AutoRefreshDemo</url-pattern>
    </servlet-mapping>

    <!--Error-page-->
    
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorDemo</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Error</exception-type>
        <location>/ErrorDemo</location>
    </error-page>


</web-app>